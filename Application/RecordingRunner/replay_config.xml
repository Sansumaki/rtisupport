<?xml version="1.0" encoding="UTF-8"?>

<!-- All of our files start with a dds tag -->
<dds xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:noNamespaceSchemaLocation="https://community.rti.com/schema/6.0.0/rti_replay_service.xsd">

  <replay_service name="Replay_Service">
    <!-- Enable remote administration -->
    <administration>
      <domain_id>0</domain_id>
    </administration>

    <!-- Enable monitoring -->
    <monitoring>
      <status_publication_period>
        <sec>1</sec>
        <nanosec>0</nanosec>
      </status_publication_period>
      <!-- Sampling period: 500 ms -->
      <statistics_sampling_period>
        <sec>0</sec>
        <nanosec>500000000</nanosec>
      </statistics_sampling_period>
    </monitoring>

    <storage>
      <sqlite>
        <storage_format>XCDR2</storage_format>
        <database_dir>C:\Users\schs\Documents\rti_workspace\6.0.1\user_config\recording_service\cdr_recording</database_dir>
      </sqlite>
    </storage>

    <!--<data_selection>
      <time_range>
        <begin_time>
          <sec>0</sec>
        </begin_time>
        --><!--<begin_tag>SessionStart</begin_tag>--><!--
        <end_time>
          <sec>1500</sec>
        </end_time>
        --><!--<end_tag>SessionEnd</end_tag>--><!--
      </time_range>
    </data_selection>-->

    <playback>
      <!--<fidelity>
        <sampling_period>
          <sec>1</sec>
        </sampling_period>
      </fidelity>-->
      <rate>1</rate>
      <enable_looping>false</enable_looping>
      <!--<start_replay_local_time>
        <hour>0</hour>
        <minute>1</minute>
        <second>0</second>
      </start_replay_local_time>-->
    </playback>

    <!-- Configuration for the service:
             DomainParticipant configuration, storage configuration -->
    <domain_participant name="DefaultParticipant">
      <domain_id>0</domain_id>
    </domain_participant>

    <session name="DefaultSession"
             default_participant_ref="DefaultParticipant">
      <!-- Topics to replay in this session -->
      <topic_group name="DefaultTopicGroup">
        <!-- Topics to replay -->
        <allow_topic_name_filter>*</allow_topic_name_filter>
        <deny_topic_name_filter>rti/*</deny_topic_name_filter>
      </topic_group>
    </session>
  </replay_service>
</dds>
